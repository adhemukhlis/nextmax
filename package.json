{
	"name": "nextmax",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "yarn env-cmd -x -f .env next dev --turbopack -p '$PORT'",
		"start": "yarn env-cmd -x -f .env next start --turbopack -p '$PORT'",
		"build": "next build",
		"build:turbo": "next build --turbopack",
		"lint": "eslint .",
		"typecheck": "tsc --noEmit",
		"fix": "eslint --fix .",
		"format": "yarn prettier --config .prettierrc --write ./src",
		"dependencies-upgrade": "yarn yarn-upgrade-all",
		"scss-fix": "yarn sass-migrator module --migrate-deps src/styles/global.scss",
		"analyze": "ANALYZE=true next build",
		"install:prod": "yarn install --production"
	},
	"dependencies": {
		"@next/bundle-analyzer": "^15.3.4",
		"@vercel/speed-insights": "^1.2.0",
		"dayjs": "^1.11.13",
		"env-cmd": "^10.1.0",
		"next": "^15.3.4",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.30.0",
		"@types/node": "24.0.3",
		"@types/react": "19.1.8",
		"@types/react-dom": "^19.1.6",
		"@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
		"eslint-config-next": "^15.3.3",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-next": "^0.0.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"globals": "^16.2.0",
		"prettier": "^3.6.0",
		"sass": "^1.89.2",
		"sass-migrator": "^2.3.2",
		"typescript": "5.8.3",
		"yarn-upgrade-all": "^0.7.5"
	},
	"yarn-upgrade-all": {
		"ignore": [
			"sass"
		]
	}
}
